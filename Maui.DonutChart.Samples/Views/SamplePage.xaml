<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Maui.DonutChart.Samples.Views.SamplePage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:donut="http://schemas.dashthedev.com/maui/donut-chart"
    xmlns:vm="clr-namespace:Maui.DonutChart.Samples.ViewModels"
    x:DataType="vm:SampleViewModel"
    Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="50,*,50">
        <Label
            x:Name="ClickedLabel"
            Padding="15,0"
            Text="Nothing clicked"
            VerticalTextAlignment="Center" />

        <donut:DonutChartView
            Grid.Row="1"
            BackgroundColor="#10000000"
            ChartInnerRadius="250"
            ChartOuterRadius="400"
            ChartRotationDegrees="90">
            <donut:DataEntry Clicked="OnEntryClicked" Value="200" />
            <donut:DataEntry Clicked="OnEntryClicked" Value="400" />
            <donut:DataEntry Clicked="OnEntryClicked" Value="300" />
            <donut:DataEntry Clicked="OnEntryClicked" Value="432" />
        </donut:DonutChartView>

        <Button
            Grid.Row="2"
            Command="{Binding GoBackCommand}"
            HorizontalOptions="Center"
            Text="Go Back" />
    </Grid>

</ContentPage>